<Window x:Class="FileIODemoinWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileIODemoinWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <TextBox x:Name="rtbTextData" Height="206" Margin="66,0,81,0" Background="Aqua" Foreground="AliceBlue" />
        <WrapPanel Orientation="Horizontal">
            <Label Name="lblFileName" Content="File Name"/>
            <TextBox Name="txtFileName" Width="205"/>
        </WrapPanel>
        <WrapPanel Orientation="Horizontal">
            <Button Name="btnSave" Content="Save" Width="130" Click="btnSave_Click"/>
            <Button x:Name="btnOpen" Content="Open" Width="169" Click="btnOpen_Click"/>
        </WrapPanel>
    </StackPanel>
</Window>
