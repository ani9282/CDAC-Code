<Application x:Class="WpfStyleDemo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="MyButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,2">
                        <GradientStop Color="Red" Offset=".2" />
                        <GradientStop Color="Blue" Offset=".5" />
                        <GradientStop Color="Green" Offset=".2" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="AntiqueWhite"></Setter>
        </Style>
        <Style x:Key="myLabel" TargetType="Control">
            <Setter Property="Foreground" Value="Chocolate" />
            <Setter Property="Background" Value="Snow" />
        </Style>
    </Application.Resources>
</Application>
