<Window x:Class="WpfApplication1.ExpanderControlDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ExpanderControlDemo" Height="300" Width="300">
    <Grid>
        <Expander Header="More Options">
            <StackPanel Margin="10,4,0,0">
                <CheckBox Margin="4" Content="Training" />
                <CheckBox Margin="4" Content="Technical Writing" />
                <CheckBox Margin="4" Content="Consulting" />
            </StackPanel>
        </Expander>
    </Grid>
</Window>
