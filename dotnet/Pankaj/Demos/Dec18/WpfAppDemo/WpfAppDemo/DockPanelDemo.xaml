<Window x:Class="WpfAppDemo.DockPanelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDemo"
        mc:Ignorable="d"
        Title="DockPanelDemo" Height="300" Width="300">
    <DockPanel>
        <Button Name="btn1" Content="Top Button" DockPanel.Dock="Top"/>
        <Button Name="btn2" Content="Left Button" DockPanel.Dock="Left"/>
        <Button Name="btn3" Content="Bottom Button" DockPanel.Dock="Bottom"/>
        <Button Name="btn4" Content="Right Button" DockPanel.Dock="Right"/>
        <Button Name="btn5" Content="Center Button" />


    </DockPanel>
</Window>
