@model IEnumerable<MVC_EF_DEMO.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Customer", "Create")
</p>
<table class="table">
    <tr>
        <th>
         Customer Name
        </th>
        <th>
            Address
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Addr)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustId }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustId })
        </td>
    </tr>
}

</table>
