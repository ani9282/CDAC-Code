  </servlet-mapping>
  <servlet>
  	<servlet-name>category</servlet-name>
  	<servlet-class>com.training.servlet.CategoryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>category</servlet-name>
  	<url-pattern>/category</url-pattern>
  </servlet-mapping>
</web-app>